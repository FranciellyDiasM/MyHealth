<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MyHealth.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
    </style>

    <style name="Theme.MyHealth" parent="Base.Theme.MyHealth.NoActionBar" />

    <style name="TransparentDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Link">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="TextInputLayout">
        <item name="boxBackgroundColor">@color/bg_edittext</item>
    </style>

    <style name="EditText">
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditTextArea" parent="EditText">
        <item name="android:background">@drawable/bg_neutral_outline</item>
        <item name="android:gravity">top</item>
        <item name="android:minLines">4</item>
    </style>

    <style name="Combobox">
        <item name="android:layout_height">56dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="android:textColor">@color/edit_text_color</item>
    </style>
</resources>